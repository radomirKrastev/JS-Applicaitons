<form id="create-form" method="/create" action="post">
    <label for="defaultFormNameModalEx">Your cause</label>
    <input name="cause" type="text" id="defaultFormNameModalEx" class="form-control form-control-sm"
        placeholder="Collage..." />
    <br />
    <label for="defaultFormEmailModalEx">Your cause picture...</label>
    <input name="pictureUrl" type="text" id="defaultFormEmailModalEx" class="form-control form-control-sm"
        placeholder="https://..." />
    <br />
    <label for="defaultFormSubjectModalEx">Your needed funds...</label>
    <input name="neededFunds" type="text" id="defaultFormSubjectModalEx" class="form-control form-control-sm"
        placeholder="2400.00" />
    <br />
    <label for="defaultFormMessageModalEx">Your cause description...</label>
    <textarea name="description" style="resize: none; height: 150px;" type="text" id="defaultFormMessageModalEx"
        class="md-textarea form-control" placeholder="I'm looking for funds because..."></textarea>
    <div class="text-center mt-4 mb-2">
        <button type="submit" class="btn btn-info">Send</button>
    </div>
</form>